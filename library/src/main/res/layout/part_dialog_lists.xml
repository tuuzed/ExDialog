<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
>

    <com.tuuzed.androidx.exdialog.internal.DialogRecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            tools:listitem="@layout/listitem_simpleitems"
    />

    <com.github.ybq.android.spinkit.SpinKitView
            android:id="@+id/loadingIcon"
            style="@style/SpinKitView.Small.Wave"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="36dp"
            android:layout_marginBottom="36dp"
            android:layout_gravity="center"
            app:SpinKit_Color="?attr/colorPrimary"
    />

    <com.tuuzed.androidx.exdialog.internal.DialogButton
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:id="@+id/button"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="36dp"
            android:paddingBottom="36dp"
            app:dialog_button_color="?attr/colorPrimary"
            tools:text="加载失败，点击重试"
    />


</FrameLayout>



