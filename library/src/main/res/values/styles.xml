<resources>


    <style name="ExDialog_Slide_AnimationStyle" parent="Animation.AppCompat.Dialog">
        <item name="android:windowEnterAnimation">@anim/popup_slide_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/popup_slide_exit_anim</item>
    </style>

    <style name="ExDialog_Fade_AnimationStyle" parent="Animation.AppCompat.Dialog">
        <item name="android:windowEnterAnimation">@anim/popup_fade_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/popup_fade_exit_anim</item>
    </style>

    <style name="Theme_ExDialog" parent="Theme.MaterialComponents.Dialog">
        <!--边框-->
        <item name="android:windowFrame">@null</item>
        <!--浮动窗口-->
        <item name="android:windowIsFloating">true</item>
        <!--半透明-->
        <item name="android:windowIsTranslucent">false</item>
        <!--无标题-->
        <item name="android:windowNoTitle">true</item>
        <!--背景透明-->
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--阴影效果-->
        <item name="android:backgroundDimEnabled">true</item>
        <!--输入法遮挡键盘-->
        <item name="android:windowSoftInputMode">adjustResize</item>
        <!--自定义属性-->
        <item name="exdialog_basic_background">@drawable/exdialog_basic_background</item>
        <item name="exdialog_loading_background">@drawable/exdialog_loading_background</item>

    </style>

</resources>
