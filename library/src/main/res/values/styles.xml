<resources>


    <style name="ExDialog_Slide_AnimationStyle" parent="Animation.AppCompat.Dialog">
        <item name="android:windowEnterAnimation">@anim/popup_slide_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/popup_slide_exit_anim</item>
    </style>

    <style name="ExDialog_Fade_AnimationStyle" parent="Animation.AppCompat.Dialog">
        <item name="android:windowEnterAnimation">@anim/popup_fade_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/popup_fade_exit_anim</item>
    </style>

    <style name="BaseExDialogTheme" parent="Theme.MaterialComponents.Dialog">
        <!--边框-->
        <item name="android:windowFrame">@null</item>
        <!--浮动窗口-->
        <item name="android:windowIsFloating">true</item>
        <!--半透明-->
        <item name="android:windowIsTranslucent">true</item>
        <!--无标题-->
        <item name="android:windowNoTitle">true</item>
        <!--背景透明-->
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--阴影效果-->
        <item name="android:backgroundDimEnabled">true</item>
        <!--避免输入法遮挡键盘-->
        <item name="android:windowSoftInputMode">adjustResize|stateAlwaysVisible</item>
    </style>

</resources>
